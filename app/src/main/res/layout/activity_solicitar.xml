<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorFondo"
    android:layout_height="match_parent"
    tools:context=".Solicitar">

    <TextView
        android:id="@+id/tv_solicitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar por ubicación"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv_solicitar"
        android:gravity="center"
        android:textSize="25sp"/>






    <Button
        android:id="@+id/btn_solicitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Buscar"
        android:background="@drawable/round2"/>

    <Button
        android:id="@+id/btn_menos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round2"
        android:layout_below="@+id/tv_ubicacion"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="-" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_distancia"
        android:text="10 Km"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_below="@+id/tv_ubicacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_calificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar por calificación"
        android:textColor="#fff"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/tv_distancia"
        android:gravity="center"
        android:textSize="25sp"/>

    <RatingBar
        android:id="@+id/raitingbar2"
        android:progressBackgroundTint="#9e9e9e"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_calificacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/btn_mas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_ubicacion"
        android:background="@drawable/round2"
        android:text="+"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />






</RelativeLayout>