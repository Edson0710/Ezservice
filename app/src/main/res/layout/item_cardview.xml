<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contenedor_imagen"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_marginTop="16dp"
                    android:id="@+id/imagen_cardview"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:scaleType="center"
                    android:background="@drawable/img"
                    android:layout_marginBottom="16dp"

                    />

            </LinearLayout>


            <TextView
                android:id="@+id/calificacion_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenedor_imagen"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Calificacion" />

            <TextView
                android:id="@+id/nombre_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/calificacion_cardview"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:text="Nombre" />

            <TextView
                android:id="@+id/edad_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_cardview"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Edad" />

            <TextView
                android:id="@+id/descripcion_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edad_cardview"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="DescripciÃ³n" />

            <Button
                android:id="@+id/btn_comentarios"
                android:text="Comentarios"
                android:textColor="#fff"
                android:background="@drawable/round2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />







        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>