<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".Calificar">

    <TextView
        android:id="@+id/txt_calificar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor, califique como fue su experiencia con nuestro usuario:"
        android:textColor="#9e9e9e"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        />

    <RatingBar
        android:id="@+id/raitingbar"
        android:progressBackgroundTint="#9e9e9e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_calificar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txt_calificar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese un comentario:"
        android:textColor="#9e9e9e"
        android:textStyle="italic"
        android:layout_below="@+id/raitingbar"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#fff"
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#9e9e9e"
        android:layout_below="@id/txt_calificar3"/>

    <Button
        android:id="@+id/btn_calificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round2"
        android:text="Finalizar"
        android:textColor="#fff"
        android:textStyle="bold" />



</RelativeLayout>